    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "micro-stacks/api": [
        "./src/api.ts"
      ],
      "micro-stacks/bip39": [
        "./src/bip39.ts"
