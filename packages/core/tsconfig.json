      "micro-stacks/crypto-aes": [
        "./src/crypto-aes.ts"
      ],
      "micro-stacks/crypto-pbkdf2": [
        "./src/crypto-pbkdf2.ts"
      ],
      "micro-stacks/crypto-hmac-sha": [
        "./src/crypto-hmac-sha.ts"
      ],
      "micro-stacks/crypto-sha": [
        "./src/crypto-sha.ts"
      ],
      "micro-stacks/network": [
        "./src/network.ts"
      ],
      "micro-stacks/storage": [
        "./src/storage.ts"
